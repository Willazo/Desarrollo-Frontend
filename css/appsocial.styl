/*Permite uso de variables*/
/*leonidas = #EE22DD*/
gris_oscuro = #444
gris_texto = #7A7A7A
azul = #22BCE0
naranja = #DD4F24

@font-face {
    font-family: 'icomoon';
    src:    url('../fonts/icomoon.eot?pcs9c8');
    src:    url('../fonts/icomoon.eot?pcs9c8#iefix') format('embedded-opentype'),
        url('../fonts/icomoon.ttf?pcs9c8') format('truetype'),
        url('../fonts/icomoon.woff?pcs9c8') format('woff'),
        url('../fonts/icomoon.svg?pcs9c8#icomoon') format('svg');
    font-weight: normal;
    font-style: normal;
}

a
	color naranja
/* no es necesario añadir puntos, puntos y coma, dos puntos ni llaves, lo interpreta*/
body
	/*background leonidas*/
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

	h3
		font-size 14px
		font-weight normal

		strong
			display block

		.creado
			&:before
			&:after
				content " - "

footer
	background naranja
	/*bottom 0*/
	color rgba(white,0.5)
	padding 1em 0
	text-align center
	/*position absolute*/
	width 100%


header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2) /* x, y, difuminación, creación de color en hexadecimal(color negro-> 0,0,0, y 0.2 de transparencia)*/
	color white
	overflow hidden /* te añade una caja debajo para cuando el header se desconfigura al redimensionar la página*/
	/* en lo que se refiere a márgenes es mejor usar "em" que "px"*/
	/* porque el tamaño se vuelve relativo a la fuente, a que sea relativo a un número arbitrario como px*/
	padding 0.5em /* 1em equivale al tamaño d la fuente más cercana, en este un tamaño de 16px */
	position relative
	z-index 1 /* para que se vea la sombra de la cabecera*/

	.logo
		border-right 1px solid azul
		float left
		width 60px /* le añadimos un ancho al logo, para que justo después añada la línea azul a continuación y no en el límite del borde derecho*/
		img
			width 52px

	.titular
		margin 0 60px 0 70px /*margen superior 0, margen de la derecha 80px, margen de abajo 0, y el ancho 70px */
		/* el 70 es porque el logo ocupa 60px y si yo quiero que el texto esté un poco más separado, por ejemplo 10px */
		/*pues hago la suma 60 + 10 son 70px será el espacio donde se ubicará el texto */
		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none /* para que no haya subrayado*/
		
		.publicar
			background naranja
			color white
			float right
			font-style italic
			margin -5px 1em 0 0
			padding 0.2em 0.5em /*0.2 arriba y abajo y 0.5 hacia los lados*/
			text-decoration none
			text-shadow 1px 1px 0px black /*1er parám cuanto se va a movel la sombra en x, 2do param cuanto en y, */
			/*3er param cuanto es la difuminación de la sombra, y 4º color */
			&:before
				display inline-block
				content "\e908"
				font-family "icomoon"
				margin 0 3px 0 0

		.titulo
			font-size 18px
			font-weight normal
			margin 0 /*margen superior 0 */
			padding 0 
			
	.usuario
		position absolute /*fixed funciona igual pero cuando bajemos el scroll también bajará*/
		right 10px
		top 10px
		.avatar
			margin 0 1.1em 0 0
			position relative
			z-index 2 /* sirve para enviar el elemento hacia capas más atrás */
			img
				width 50px
				border-radius 50% /* avatar redondeado */

		.flecha
			background naranja
			color white
			display block
			padding 2px
			position absolute
			right 0
			top 15px 
			text-align right
			text-decoration none
			width 50%
			z-index 0 /* de momento no sé si esto sirve*/

			&:after
				display inline-block
				content "\e900"
				font-family "icomoon"
				text-shadow 1px 1px 0px black

nav
	background azul
	border-left 15px solid white
	position relative /*para dibujar flecha blanca*/

	&:before/*----para dibujar flecha blanca----*/
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0
		/*---------------------------------------*/

	.menu
		height 40px /* el alto de la caja*/
		line-height 40px /*el alto de las lineas de texto es de 40 px*/
		margin 0 /* para los espacios entre bloques que aparecen y pueden resultar confusos de por qué aparecen*/
		/* la solución es añadir al contenedor margin 0 */
		padding 0
		overflow-x auto /*añades el elemento dentro del contenedor en x*/
		white-space nowrap

		li
			display inline-block /* alinea el listado en un mismo bloque en horizontal */

			a
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em /* esto en firefox le quita el scroll lateral, pero en chrome sigue aún así*/
				text-decoration none

.posts
	padding 0.5em

	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto
		margin-bottom 1em

		.acciones
			border-top 3px solid azul
			padding 0.5em
			/*para solucionar que se corte luego y deje fuera los votos, hacemos el ovweflow hidden*/
			overflow hidden


			.datos
				float right

				.comentarios
					background gris_oscuro
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none

				.estrella
					text-decoration none
					&:after
						color #E0D561
						content "\e9d9"
						font-family "icomoon"

			.votos
				float left

				.down
				.up
					line-height 1.5em
					text-decoration none

				.down
					color red
					&:before
						font-family "icomoon"
						font-size 1.5em
						content "\e900"
						vertical-align bottom

				.up
					color green
					&:before
						font-family "icomoon"
						font-size 1.5em
						content "\e901"
						vertical-align bottom

		.descripcion
			color gris_texto

			.detalles
				height 160px
				margin-left 130px /*tamaño entera de la imagen más lo que yo quiera sumarle,*/
				/* en este caso 10 px */

				.autor
					margin 0.5em 0 2em 0

				.fecha
					float right /* todas las etiquetas p tienen un margen 1em*/
					margin 0 1em 0 0 /* para quitar ese margen de 1em*/

				.tag
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none

				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0 /* para quitar espaciado entre post y nav, tods los contenedores de texto*/
					/* tienen un margen que se sale de su contenedor*/
					padding 0.5em 0.5em 0 0

			.imagen
				float left
				img
					height 160px
					vertical-align top
					width 120px

@media screen and (min-width: 768px) /* nos imprime en pantalla si el minimo de ancho es 768*/

	header
		.titular
			.publicar
				padding-left 3em
				position relative

				&:before
					left 0px
					font-size 2.5em
					position absolute
					top -10px

	.posts
		.post
			display inline-block
			width 46%
			vertical-align top
			&:nth-child(odd) /* para solo dar características a elementos impares, o seala columna 1*/
			/* even significa par*/
				margin-right 2%
